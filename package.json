    "husky": "9.1.7",
    "jest": "30.1.3",
    "knip": "5.63.1",
    "prettier": "3.6.2",
    "pretty-quick": "4.2.2",
    "sinon": "21.0.0",
    "toml": "3.0.0",
    "ts-jest": "29.4.2",
    "tsx": "4.20.5",
    "typescript": "5.9.2"
  },
  "scripts": {
    "build": "tsc && tsx scripts/generate-package-json.ts && replace-in-file __VERSION__ ${VERSION:-SNAPSHOT} build/**/*.js,build/package.json",
    "test": "jest --coverage",
    "test-integration": "cd test/integration && npm test",
    "format": "prettier --write .",
    "check-format": "prettier --list-different .",
    "license": "eslint",
    "license-fix": "eslint --fix",
    "precommit": "pretty-quick --staged",
    "prepare": "husky install .husky || true"
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  }
}
