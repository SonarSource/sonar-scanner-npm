{
  "name": "sonarqube-scanner",
  "description": "SonarQube/SonarCloud Scanner for the JavaScript world",
  "version": "3.0.0",
  "homepage": "https://github.com/SonarSource/sonar-scanner-npm",
  "author": {
    "name": "Fabrice Bellingard",
    "email": "fabrice.bellingard@sonarsource.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SonarSource/sonar-scanner-npm.git"
  },
  "bugs": {
    "url": "https://github.com/SonarSource/sonar-scanner-npm/issues"
  },
  "license": "LGPL-3.0",
  "main": "src/index.js",
  "bin": {
    "sonar-scanner": "src/bin/sonar-scanner"
  },
  "engines": {
    "node": ">= 14"
  },
  "dependencies": {
    "decompress": "^4.2.1",
    "fancy-log": "^2.0.0",
    "https-proxy-agent": "^5.0.1",
    "mkdirp": "^1.0.4",
    "node-downloader-helper": "^2.1.5",
    "progress": "^2.0.3",
    "slugify": "^1.6.5"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "mocha": "^10.1.0",
    "nyc": "^15.1.0",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "sinon": "^15.0.0"
  },
  "keywords": [
    "sonarqube",
    "sonarcloud",
    "sonarqube-scanner",
    "sonarqube-runner",
    "sonar-scanner",
    "sonar-runner"
  ],
  "scripts": {
    "build": "npm ci && npm run check-format && node ./scripts/build-orchestrator.js",
    "test": "npx nyc mocha test/unit/**/*.test.js",
    "test-integration": "npx nyc mocha test/integration/**/*.test.js",
    "ci": "npm run test && node ci-analysis.js",
    "format": "prettier --write \"{src,test}/**/!(*.lint).js\"",
    "check-format": "prettier --list-different \"{src,test}/**/!(*.lint).js\""
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "avoid"
  }
}
